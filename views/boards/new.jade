extends ../layout

block content
    h1.
        #{title}
    form#formAddBoard(name="createBoard",method="post",action="/boards/new")
        p Category:
            input#inputCategory(type="text", name="category")
        p Title :
            input#inputTitle(type="text", name="title")
        p Body :
            input#inputBody(type="text", name="body")
        p
            button#btnSubmit(type="submit") submit