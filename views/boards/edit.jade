extends ../layout

block content
    h1.
        Board ID #{board._id}
    form(action='/bpards/#{board._id}/edit',method='post',name='updateMember',enctype='application/x-www-form-urlencoded')
        p Title:
            input#inputTitle(type='text', value='#{board.title}', name='title')
        p Body:
            input#inputBody(type='text', value='#{board.body}', name='body')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update